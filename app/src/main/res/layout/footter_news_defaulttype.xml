<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="match_parent" android:layout_margin="20dp"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_loading"
            android:layout_width="wrap_content" android:src="@drawable/common_listview_headview_red_arrow"
            android:layout_height="wrap_content" />
        <LinearLayout android:layout_marginLeft="10dp"
            android:layout_width="wrap_content" android:orientation="vertical"
            android:layout_height="wrap_content" android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="手松刷新。。。"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
            <TextView android:layout_marginTop="8dp"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:textColor="#888888"
                android:layout_height="wrap_content" android:text="上次更新时间:2019-09-15 17：14：00"  />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <alfredfliu.app.mynews.ui.control.TopImageViewPager
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="180dp"></alfredfliu.app.mynews.ui.control.TopImageViewPager>
        <TextView
            android:id="@+id/tv_TopImageText"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/gallery"
            android:layout_alignLeft="@+id/gallery"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:text="testtesttestetsets"
            android:gravity="center_vertical"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="250dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/gallery"
            android:layout_alignRight="@+id/gallery"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:layout_marginRight="0dp">

            <LinearLayout
                android:id="@+id/ll_points"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:orientation="horizontal"></LinearLayout>

            <ImageView
                android:id="@+id/iv_red_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/selectedpoint" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
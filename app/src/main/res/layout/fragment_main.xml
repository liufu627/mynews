<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/part_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <alfredfliu.app.mynews.ui.control.NoScrollViewPager
            android:id="@+id/viewPager_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></alfredfliu.app.mynews.ui.control.NoScrollViewPager>
    </LinearLayout>

    <include layout="@layout/part_footer" />
</LinearLayout>
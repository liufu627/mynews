<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:padding="4dp"
    android:layout_height="match_parent" android:layout_margin="4dp">

    <LinearLayout android:id="@+id/ll_test"
        android:layout_width="wrap_content" android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/img_left"/>


        <LinearLayout
            android:layout_width="wrap_content" android:orientation="vertical" android:layout_margin="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_newsTitle" android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_newsDate"
                android:layout_width="wrap_content" android:layout_marginTop="20dp"
                android:layout_height="wrap_content" /></LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/ll_test"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_news_comment_num" />

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_tab_bg"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:src="@drawable/guide_1"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/gallery"
            android:layout_alignBottom="@+id/gallery"
            android:background="#329B9B9B">

            <TextView
                android:id="@+id/tv_TopImageText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="AASSDFFFFFFFFFFFFFFFFFFFFFFFFFFFFFasdfas" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="30dp">

                <LinearLayout
                    android:id="@+id/lv_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_red_point"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selectedpoint" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>